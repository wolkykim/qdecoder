prefix		= @prefix@
exec_prefix	= ${prefix}

## Name
PRGNAME		= qDecoder

## Static Library Name
LIBNAME		= lib${PRGNAME}.a

## Shared Library Name
SLIBVERSION	= 8
SLIBNAME	= lib${PRGNAME}.so
SLIBREALNAME	= ${SLIBNAME}.${SLIBVERSION}

## System library directory
LIBDIR		= @libdir@
HEADERDIR	= @includedir@

## Which compiler & options for release
CC		= @CC@
CFLAGS		= @CFLAGS@
DEFS		= @DEFS@ @OPT_DEFS@
INCLUDE		= -I./ @OPT_INCS@

## Utilities
AR		= @AR@
ARFLAGS		= -rc
CHMOD		= @CHMOD@
INSTALL		= @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
LN_S		= @LN_S@
RANLIB		= @RANLIB@
RM		= @RM@

## Objects List
OBJ		= qCgiRequest.o		\
		qCgiResponse.o		\
		qSession.o		\
		qHtml.o			\
					\
		qSem.o			\
		qShm.o			\
		qDatabase.o		\
					\
		qEntry.o		\
		qHashtbl.o		\
		qHasharr.o		\
		qQueue.o		\
		qObstack.o		\
					\
		qConfig.o		\
		qLog.o			\
		qHttpClient.o		\
					\
		qIo.o			\
		qSocket.o		\
		qString.o		\
		qFile.o			\
		qEncode.o		\
		qHash.o			\
		qSed.o			\
		qCount.o		\
		qTime.o			\
		qSystem.o		\
					\
		qInternalCommon.o	\
		md5/md5c.o

## Make Library
all: qdecoder

qdecoder: ${OBJ}
	${AR} ${ARFLAGS} ${LIBNAME} ${OBJ}
	${RANLIB} ${LIBNAME}
	${CC} -shared -Wl,-soname,${SLIBREALNAME} -o ${SLIBREALNAME} ${OBJ}
	${LN_S} -f ${SLIBREALNAME} ${SLIBNAME}

install: all
	${INSTALL_DATA} qDecoder.h ${HEADERDIR}/qDecoder.h
	${INSTALL_DATA} ${LIBNAME} ${LIBDIR}/${LIBNAME}
	${INSTALL_DATA} ${SLIBREALNAME} ${LIBDIR}/${SLIBREALNAME}
	${LN_S} -f ${LIBDIR}/${SLIBREALNAME} ${LIBDIR}/${SLIBNAME}

deinstall: uninstall
uninstall:
	${RM} -f ${HEADERDIR}/qDecoder.h
	${RM} -f ${LIBDIR}/${LIBNAME}
	${RM} -f ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}

doc:
	doxygen doxygen.conf

cleandoc:
	${RM} -rf ../doc/html

clean:
	${RM} -f ${OBJ} ${LIBNAME} ${SLIBREALNAME} ${SLIBNAME}

## Compile
.c.o:
	${CC} ${CFLAGS} ${DEFS} ${INCLUDE} -c -o $@ $<
